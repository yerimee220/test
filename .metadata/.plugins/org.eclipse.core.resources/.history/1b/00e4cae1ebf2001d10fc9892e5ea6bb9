public class Condition {
	public static void main(String[] args) {
		//if
		if(true) {}
		int year = 2023;
		if(year%2==0) {
			System.out.println("짝수해입니다.");
		}
		int hour = 15;
		if(hour<12) {
			System.out.println("오전");
		}
		else {
			System.out.println("오후");
		}
		//if else
		//if elseif 
		
		//switch 
	}

}
